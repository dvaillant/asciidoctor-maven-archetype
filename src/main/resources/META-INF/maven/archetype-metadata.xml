		<includes>
			<include>fop.xconf</include>
		</includes>
	</fileSet>	
	<fileSet>
		<directory>src/doc/docbkx/images</directory>
		<includes>
			<include>*.*</include>
		</includes>
	</fileSet>
	<fileSet>
		<directory>src/doc/media/images</directory>
